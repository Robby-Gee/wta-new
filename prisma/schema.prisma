generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String    @id @default(cuid())
  email                 String    @unique
  name                  String?
  password              String?
  image                 String?
  isAdmin               Boolean   @default(false)
  hiddenFromLeaderboard Boolean   @default(false)
  totalPoints           Int       @default(0)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  picks                 Pick[]
}

model Tournament {
  id              String           @id @default(cuid())
  name            String
  level           TournamentLevel
  startDate       DateTime
  endDate         DateTime
  status          TournamentStatus @default(UPCOMING)
  pointsAllowance Int
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  picks           Pick[]
  matches         Match[]
}

enum TournamentLevel {
  WTA_500
  WTA_1000
  GRAND_SLAM
}

enum TournamentStatus {
  UPCOMING
  ACTIVE
  COMPLETED
}

model Player {
  id          String   @id @default(cuid())
  name        String
  country     String?
  wtaRanking  Int
  cost        Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  picks       Pick[]
  matches     Match[]
}

model Pick {
  id           String     @id @default(cuid())
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  tournament   Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  tournamentId String
  player       Player     @relation(fields: [playerId], references: [id], onDelete: Cascade)
  playerId     String
  pickType     PickType
  pointsEarned Int        @default(0)
  createdAt    DateTime   @default(now())

  @@unique([userId, tournamentId, playerId])
  @@index([userId])
  @@index([tournamentId])
}

enum PickType {
  MAIN_DRAW
  QUALIFIER
}

model Match {
  id            String     @id @default(cuid())
  tournament    Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  tournamentId  String
  player        Player     @relation(fields: [playerId], references: [id], onDelete: Cascade)
  playerId      String
  round         String
  won           Boolean
  pointsAwarded Int        @default(0)
  matchDate     DateTime?
  createdAt     DateTime   @default(now())

  @@index([tournamentId])
  @@index([playerId])
}
